<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="presenter" type="com.jude.jarvis.list.SimpleListPresenter"/>
    </data>


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jude.jarvis.list.SimpleListActivity">

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            itemPresenter='@{"com.jude.jarvis.widget.DogItemPresenter"}'
            dividerHeight="@{@dimen/divider}"/>


    </android.support.constraint.ConstraintLayout>

</layout>
